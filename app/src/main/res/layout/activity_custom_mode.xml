<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".CustomMode"
        android:background="@drawable/homescreen_dark">

    <Button
            android:id="@+id/buttonPlayCustom"
            android:text="Play!"
            android:layout_width="183dp"
            android:layout_height="52dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:background="@drawable/menu_button_short"
            android:fontFamily="@font/aladin" android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="40dp"/>
    <EditText
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/editMaxDeadAllowed"
            android:text="5"
            android:fontFamily="@font/aladin" android:textColor="#FFFFFF" android:numeric="integer"
            android:gravity="center"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="80dp" android:layout_marginEnd="80dp"
            app:layout_constraintTop_toBottomOf="@+id/editDeathProbability" android:layout_marginTop="8dp"/>
    <EditText
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/editInfectionProbability"
            android:text="0.07"
            android:fontFamily="@font/aladin" android:textColor="#FFFFFF"
            android:gravity="center"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="80dp" android:layout_marginEnd="80dp"
            app:layout_constraintTop_toBottomOf="@+id/editInfectionRadius" android:layout_marginTop="8dp"
            android:numeric="decimal"/>
    <EditText
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/editDeathProbability"
            android:text="0.01"
            android:fontFamily="@font/aladin" android:textColor="#FFFFFF"
            android:gravity="center"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="80dp" android:layout_marginEnd="80dp"
            app:layout_constraintTop_toBottomOf="@+id/editInfectionProbability" android:layout_marginTop="8dp"
            android:numeric="decimal"/>
    <EditText
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/editInfectionRadius"
            android:text="1"
            android:fontFamily="@font/aladin" android:textColor="#FFFFFF" android:numeric="integer"
            android:gravity="center"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="80dp" android:layout_marginEnd="80dp"
            app:layout_constraintTop_toBottomOf="@+id/editInitialSick" android:layout_marginTop="8dp"/>
    <TextView
            android:text="Board Width:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textBoardWidth"
            android:textColor="#FFFFFF" android:fontFamily="@font/aladin"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="24dp"
            android:layout_marginStart="24dp" android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@+id/textBoardHeight" android:layout_marginTop="24dp"/>
    <TextView
            android:text="Board Height:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textBoardHeight"
            android:textColor="#FFFFFF" android:fontFamily="@font/aladin"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="24dp"
            android:layout_marginStart="24dp" android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@+id/textCustomMode" android:layout_marginTop="40dp"/>
    <TextView
            android:text="Number of Initial Sick People:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textInitiallSick"
            android:textColor="#FFFFFF" android:fontFamily="@font/aladin"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="24dp"
            android:layout_marginStart="24dp" android:textSize="18sp" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/textBoardWidth"/>
    <TextView
            android:text="Infection Radius:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textInfectionRadius"
            android:textColor="#FFFFFF" android:fontFamily="@font/aladin"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="24dp"
            android:layout_marginStart="24dp" android:textSize="18sp" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/textInitiallSick"/>
    <TextView
            android:text="Death Probability:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textDeathProbability"
            android:textColor="#FFFFFF" android:fontFamily="@font/aladin"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="24dp"
            android:layout_marginStart="24dp" android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@+id/textInfectionProbability" android:layout_marginTop="24dp"/>
    <TextView
            android:text="Infection Probability:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textInfectionProbability"
            android:textColor="#FFFFFF" android:fontFamily="@font/aladin"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="24dp"
            android:layout_marginStart="24dp" android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@+id/textInfectionRadius" android:layout_marginTop="24dp"/>
    <ImageView
            android:id="@+id/buttonMusicCustom"
            android:layout_width="36dp"
            android:layout_height="32dp" app:srcCompat="@drawable/music_on"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="20dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="20dp"
            android:layout_marginEnd="20dp"/>
    <ImageView
            android:id="@+id/imageSettingsCustom"
            app:srcCompat="@drawable/settings"
            android:layout_width="33dp"
            android:layout_height="34dp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/buttonMusicCustom"
            android:layout_marginRight="20dp" android:layout_marginEnd="20dp"/>
    <TextView
            android:text="Max Dead Allowed:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textMaxDeadAllowed"
            android:textColor="#FFFFFF" android:fontFamily="@font/aladin"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="24dp"
            android:layout_marginStart="24dp" android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@+id/textDeathProbability" android:layout_marginTop="24dp"/>
    <TextView
            android:text="Custom Mode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textCustomMode"
            app:layout_constraintTop_toTopOf="parent"
            android:fontFamily="@font/aladin" android:textColor="#FFFFFF" android:textSize="36sp"
            android:layout_marginTop="80dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
    <EditText
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/editBoardHeight"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="35dp" app:layout_constraintTop_toBottomOf="@+id/textCustomMode"
            android:text="10"
            android:fontFamily="@font/aladin" android:textColor="#FFFFFF" android:numeric="integer"
            android:gravity="center" android:layout_marginRight="80dp" android:layout_marginEnd="80dp"/>
    <EditText
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/editBoardWidth"
            android:text="10"
            android:fontFamily="@font/aladin" android:textColor="#FFFFFF" android:numeric="integer"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@+id/editBoardHeight"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="80dp" android:layout_marginEnd="80dp" android:layout_marginTop="8dp"/>
    <EditText
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/editInitialSick"
            android:text="12"
            android:fontFamily="@font/aladin" android:textColor="#FFFFFF" android:numeric="integer"
            android:gravity="center"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="80dp" android:layout_marginEnd="80dp"
            app:layout_constraintTop_toBottomOf="@+id/editBoardWidth" android:layout_marginTop="8dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>