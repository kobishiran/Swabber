<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#242021"
>
    <ImageView
            android:id="@+id/winScreenImage"
            app:srcCompat="@drawable/win_screen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#8F009688"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
    />
    <TextView
            android:id="@+id/textView7"
            android:text="TOP5 "
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:background="#3F51B5"
            android:gravity="center_horizontal|center_vertical"
            android:layout_marginTop="100dp"
            android:layout_marginLeft="133dp"
            android:layout_marginStart="133dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
    />
    <TextView
            android:id="@+id/textView5"
            android:text="Play again"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="14dp"
            android:layout_marginLeft="40dp"
            android:layout_marginStart="40dp"
            app:layout_constraintBottom_toBottomOf="@+id/textView7"
            app:layout_constraintLeft_toLeftOf="@+id/textView7"
    />
    <TextView
            android:id="@+id/textView"
            android:text="@string/enter_your_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="136dp"
            android:layout_marginStart="136dp"
            app:layout_constraintTop_toTopOf="@+id/textView7"
            app:layout_constraintStart_toStartOf="parent"
    />
    <TextView
            android:id="@+id/textView10"
            android:text="IF IN TOP 5, UPDATE SO HE CAN SEE AND MARK IT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteY="154dp"
            tools:layout_editor_absoluteX="58dp"
    />
    <TextView
            android:id="@+id/textView11"
            android:text="OK"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            tools:layout_editor_absoluteY="127dp"
            tools:layout_editor_absoluteX="136dp"
    />
    <TextView
            android:id="@+id/textView12"
            android:text="CANCEL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintVertical_bias="0.20"
    />
    <TextView
            android:id="@+id/textView13"
            android:text="YOUR SCORE IS: XXXX"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintVertical_bias="0.05"
    />
    <TextView
            android:id="@+id/textView14"
            android:text="לא קשור - שיהיה אפשר לאפס שיאים RESET"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#680303"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintVertical_bias="0.25"
    />
</androidx.constraintlayout.widget.ConstraintLayout>
