<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent" android:layout_height="match_parent"
        android:background="#242021">


    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/win_screen" android:id="@+id/winScreenImage"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:background="#8F009688" app:layout_constraintHorizontal_bias="0.0"
    />
    <TextView
            android:text="TOP5 "
            android:layout_width="150dp"
            android:layout_height="200dp" android:id="@+id/textView7"
            android:background="#3F51B5"
            android:gravity="center_horizontal|center_vertical"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="100dp" android:layout_marginLeft="133dp" android:layout_marginStart="133dp"/>
    <TextView
            android:text="Play again"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView5" android:textColor="#FFFFFF"
            android:layout_marginLeft="40dp" android:layout_marginStart="40dp"
            app:layout_constraintStart_toStartOf="@+id/textView7" android:layout_marginBottom="14dp"
            app:layout_constraintBottom_toBottomOf="@+id/textView7"/>
    <TextView
            android:text="@string/enter_your_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView" android:textColor="#FFFFFF"
            android:layout_marginLeft="136dp" android:layout_marginStart="136dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="@+id/textView7"/>
    <TextView
            android:text="IF IN TOP 5, UPDATE SO HE CAN SEE AND MARK IT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView10" tools:layout_editor_absoluteY="154dp"
            tools:layout_editor_absoluteX="58dp"/>
    <TextView
            android:text="OK"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView11" tools:layout_editor_absoluteY="127dp"
            tools:layout_editor_absoluteX="136dp" android:textColor="#FFFFFF"/>
    <TextView
            android:text="CANEL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView12" tools:layout_editor_absoluteY="127dp"
            tools:layout_editor_absoluteX="213dp" android:textColor="#FFFFFF"/>
    <TextView
            android:text="YOUR SCORE IS: XXXX"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView13" tools:layout_editor_absoluteY="68dp"
            tools:layout_editor_absoluteX="144dp" android:textColor="#FFFFFF"/>
    <TextView
            android:text="לא קשור - שיהיה אפשר לאפס שיאים RESET"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView14" tools:layout_editor_absoluteY="230dp"
            tools:layout_editor_absoluteX="102dp" android:textColor="#680303"/>
</androidx.constraintlayout.widget.ConstraintLayout>
