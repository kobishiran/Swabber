<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent" android:layout_height="match_parent"
        android:background="#242021">

    <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp" app:srcCompat="@drawable/music" android:id="@+id/imageMusic"
            android:scaleType="fitXY" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp" app:layout_constraintEnd_toEndOf="parent"/>
    <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp" app:srcCompat="@drawable/gear" android:id="@+id/imageSettings"
            app:layout_constraintEnd_toStartOf="@+id/imageMusic"
            android:layout_marginEnd="9dp" android:layout_marginRight="9dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textSwabber"
            android:textColorLink="#000000" android:textColorHint="#000000"
            android:textColor="#53C658" android:textColorHighlight="#FFFFFF"
            android:background="#00DA1111"
            android:gravity="center_horizontal" android:text="@string/swabber"
            android:textSize="72sp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="32dp"
            style="@android:style/Widget.DeviceDefault.Light.TextView" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="72dp" android:layout_marginStart="72dp"/>
    <Button
            android:text="@string/shop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/buttonShop"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="168dp"
            android:layout_marginStart="168dp" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/textSwabber"/>
    <Button
            android:text="@string/instructions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/buttonInstructions"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="148dp"
            android:layout_marginStart="148dp"
            android:layout_marginTop="14dp" app:layout_constraintTop_toBottomOf="@+id/buttonShop"/>
    <TextView
            android:text="@string/new_game"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textNewGame"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="112dp" android:layout_marginStart="112dp" android:textColor="#FFFFFF"
            android:textSize="36sp" android:layout_marginTop="17dp"
            app:layout_constraintTop_toBottomOf="@+id/buttonInstructions"/>
    <TextView
            android:text="@string/select_game_mode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textSelectMode"
            android:textColor="#E8E2E2" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="88dp"
            android:layout_marginStart="88dp"
            android:textSize="24sp" android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@+id/textNewGame"/>
    <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/radioGroupMode" app:layout_constraintTop_toBottomOf="@id/textSelectMode"
            android:layout_marginHorizontal="204dp" android:layout_marginTop="16dp" android:layout_marginStart="148dp"
            android:layout_marginLeft="148dp">
        <RadioButton
                android:text="@string/outbreak"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/radioButtonOutbreak"
                android:textColor="#FFFFFF"
        />
        <RadioButton
                android:text="@string/epidemic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/radioButtonEpidemic"
                android:textColor="#FFFFFF"
        />
        <RadioButton
                android:text="@string/pandemic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/radioButtonPandemic"
                android:textColor="#FFFFFF"
        />
        <RadioButton
                android:text="@string/custom_game"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/radioButtonCustomGame"
                android:textColor="#FFFFFF"
        />
    </RadioGroup>
    <Button
            android:text="@string/start"
            android:layout_width="107dp"
            android:layout_height="50dp" android:id="@+id/buttonStart"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="160dp"
            android:layout_marginStart="160dp" android:layout_marginTop="22dp"
            app:layout_constraintTop_toBottomOf="@+id/radioGroupMode"/>
    <Button
            android:text="@string/high_scores"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/buttonHighScores"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="156dp"
            android:layout_marginStart="156dp" android:layout_marginTop="38dp"
            app:layout_constraintTop_toBottomOf="@+id/buttonStart"/>
</androidx.constraintlayout.widget.ConstraintLayout>


