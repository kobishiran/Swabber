<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#242021"
>
    <ImageView
            android:id="@+id/imageMusic"
            app:srcCompat="@drawable/music"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
    />
    <ImageView
            android:id="@+id/imageSettings"
            app:srcCompat="@drawable/gear"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toLeftOf="@id/imageMusic"
    />
    <TextView
            android:id="@+id/textSwabber"
            android:text="@string/swabber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="72sp"
            android:textColor="#53C658"
            android:layout_marginTop="44dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintVertical_chainStyle="packed"
    />
    <Button
            android:id="@+id/buttonShop"
            android:text="@string/shop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/textSwabber"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintVertical_chainStyle="packed"
    />
    <Button
            android:id="@+id/buttonInstructions"
            android:text="@string/instructions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            app:layout_constraintTop_toBottomOf="@+id/buttonShop"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintVertical_chainStyle="packed"
    />
    <TextView
            android:id="@+id/textNewGame"
            android:text="@string/new_game"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="36sp"
            android:textColor="#FFFFFF"
            android:layout_marginTop="17dp"
            app:layout_constraintTop_toBottomOf="@+id/buttonInstructions"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintVertical_chainStyle="packed"
    />
    <TextView
            android:id="@+id/textSelectMode"
            android:text="@string/select_game_mode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:textColor="#E8E2E2"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@+id/textNewGame"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintVertical_chainStyle="packed"
    />
    <RadioGroup
            android:id="@+id/radioGroupMode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/textSelectMode"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintVertical_chainStyle="packed"
    >
        <RadioButton
                android:id="@+id/radioButtonOutbreak"
                android:text="@string/outbreak"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
        />
        <RadioButton
                android:id="@+id/radioButtonEpidemic"
                android:text="@string/epidemic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
        />
        <RadioButton
                android:id="@+id/radioButtonPandemic"
                android:text="@string/pandemic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
        />
        <RadioButton
                android:id="@+id/radioButtonCustomGame"
                android:text="@string/custom_game"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
        />
    </RadioGroup>
    <Button
            android:id="@+id/buttonStart"
            android:text="@string/start"
            android:layout_width="107dp"
            android:layout_height="50dp"
            android:layout_marginTop="22dp"
            app:layout_constraintTop_toBottomOf="@+id/radioGroupMode"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintVertical_chainStyle="packed"
    />
    <Button
            android:id="@+id/buttonHighScores"
            android:text="@string/high_scores"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="38dp"
            app:layout_constraintTop_toBottomOf="@+id/buttonStart"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintVertical_chainStyle="packed"
    />
</androidx.constraintlayout.widget.ConstraintLayout>


