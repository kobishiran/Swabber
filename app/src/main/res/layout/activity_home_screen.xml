<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/homescreenlight"><![CDATA["
>
    ]]>
    <ImageView
            android:id="@+id/imageSettings"
            app:srcCompat="@drawable/settings"
            android:layout_width="33dp"
            android:layout_height="34dp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/buttonMusic" android:layout_marginRight="20dp"
            android:layout_marginEnd="20dp"/>
    <TextView
            android:id="@+id/textSwabber"
            android:text="@string/swabber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="72sp"
            android:textColor="#29C131"
            android:layout_marginTop="44dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintVertical_chainStyle="packed"
            android:fontFamily="@font/aladin"/>
    <Button
            android:id="@+id/buttonShop"
            android:text="@string/shop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/textSwabber"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintVertical_chainStyle="packed"
    />
    <Button
            android:id="@+id/buttonInstructions"
            android:text="@string/instructions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            app:layout_constraintTop_toBottomOf="@+id/buttonShop"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintVertical_chainStyle="packed"
    />
    <TextView
            android:id="@+id/textNewGame"
            android:text="@string/new_game"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="36sp"
            android:textColor="#000000"
            android:layout_marginTop="17dp"
            app:layout_constraintTop_toBottomOf="@+id/buttonInstructions"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintVertical_chainStyle="packed"
    />
    <TextView
            android:id="@+id/textSelectMode"
            android:text="@string/select_game_mode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:textColor="#000000"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@+id/textNewGame"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintVertical_chainStyle="packed"
    />
    <RadioGroup
            android:id="@+id/radioGroupMode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/textSelectMode"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintVertical_chainStyle="packed"
    >
        <RadioButton
                android:id="@+id/radioButtonOutbreak"
                android:text="@string/outbreak"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
        />
        <RadioButton
                android:id="@+id/radioButtonEpidemic"
                android:text="@string/epidemic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
        />
        <RadioButton
                android:id="@+id/radioButtonPandemic"
                android:text="@string/pandemic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
        />
        <RadioButton
                android:id="@+id/radioButtonCustomGame"
                android:text="@string/custom_game"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
        />
    </RadioGroup>
    <Button
            android:id="@+id/buttonStart"
            android:text="@string/start"
            android:layout_width="107dp"
            android:layout_height="50dp"
            android:layout_marginTop="22dp"
            android:background="@drawable/menu_button_short"
            app:layout_constraintTop_toBottomOf="@+id/radioGroupMode"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintVertical_chainStyle="packed"
    />
    <Button
            android:id="@+id/buttonHighScores"
            android:text="@string/high_scores"
            android:layout_width="118dp"
            android:layout_height="56dp"
            android:layout_marginTop="38dp"
            android:background="@drawable/menu_button_short"
            app:layout_constraintTop_toBottomOf="@+id/buttonStart"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintVertical_chainStyle="packed"
    />
    <ImageView
            android:layout_width="36dp"
            android:layout_height="32dp" app:srcCompat="@drawable/music_on" android:id="@+id/buttonMusic"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="20dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="20dp"
            android:layout_marginEnd="20dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>


