<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent" app:srcCompat="@drawable/corona" android:id="@+id/homeScreenImage"
            android:background="#F5171717" android:scaleType="centerCrop"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textSwabber"
            android:textColorLink="#000000" android:textColorHint="#000000"
            android:textColor="#53C658" android:textColorHighlight="#FFFFFF"
            android:background="#00DA1111"
            android:gravity="center_horizontal" android:text="@string/swabber"
            android:textSize="72sp" android:layout_marginLeft="32dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="16dp"
            style="@android:style/Widget.DeviceDefault.Light.TextView"
            android:layout_marginStart="72dp" app:layout_constraintStart_toStartOf="@+id/homeScreenImage"
            app:layout_constraintStart_toEndOf="@+id/homeScreenImage"/>
</androidx.constraintlayout.widget.ConstraintLayout>
